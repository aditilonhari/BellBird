<p id="notice"><%= notice %></p>

<h2>Bellbird - let the loudest triumph all! </h2>

<table>
  <thead>
    <tr>
      <th>Bird Description</th>
      <th>Votes count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alarms.each do |alarm| %>
      <tr>
        <td><%= alarm.description %></td>
        <td><%= pluralize(alarm.upvotes, "vote") %></td>
        <td><%= button_to '+1', upvote_alarm_path(alarm), method: :post %></td>
        <td><%= link_to 'Show', alarm %></td>
        <td><%= link_to 'Edit', edit_alarm_path(alarm) %></td>
        <td><%= link_to 'Destroy', alarm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Alarm', new_alarm_path %>
